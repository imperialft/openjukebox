!!! Strict
%html{:lang => 'en'}
  %head
    %meta{'http-equiv' => 'content-type', :content => 'text/html; charset=utf-8'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %title OpenJukebox
    :scss
      body { padding-top: 60px; }
    / [if lte ie 7]
      = asset_tag 'font-awesome-2.0/font-awesome-ie7.css'
    - %w(app.css).each do |file|
      = asset_tag(file)
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{'data-target' => '.nav-collapse', 'data-toggle' => 'collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => '/'}
            %i.icon-circle-arrow-up.icon-large
            OpenJukebox
          .nav-collapse.collapse
            %ul.nav
              %li.active
                %a{:href => '#'} Home
              %li
                %a{:href => '#about'} About
          .navbar-text.pull-right
            - if signed_in?
              %i.icon-twitter
              == #{%w(Hello Bonjour Ola Konnichiwa Domo Ni-hao).sample}, #{user.name}!
            - else
              %a{:href => '/auth/twitter'}
                %i.icon-twitter
                Sign in via Twitter
    .container= yield
    - %w(app.js).each do |file|
      = asset_tag(file)